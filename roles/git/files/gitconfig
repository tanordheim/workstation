[branch]
    autosetupmerge = true
[rebase]
    autosquash = true
[push]
    default = simple
[rerere]
    enabled = 1
    autoupdate = true
[alias]
    st = status
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all :/
    ff = merge --ff-only
    pullff = pull --ff-only
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pr = pull --rebase
    thrust = "!f() { until git push $@; do sleep 0.5; done; }; f"
